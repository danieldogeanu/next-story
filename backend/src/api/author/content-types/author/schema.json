{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "private": true
    },
    "lastName": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "required": true,
      "maxLength": 100
    },
    "biography": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "avatar": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "socialNetworks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    }
  }
}
