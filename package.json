{
  "name": "next-story",
  "version": "0.1.0",
  "private": true,
  "description": "Playground app to figure out how to integrate the chosen tech stack.",
  "author": "Daniel Dogeanu <contact@danieldogeanu.com> (https://danieldogeanu.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/dd-playground/next/next-story.git"
  },
  "bugs": {
    "url": "https://gitlab.com/dd-playground/next/next-story/issues"
  },
  "homepage": "https://gitlab.com/dd-playground/next/next-story",
  "scripts": {
    "compose-dev": "docker compose --profile development up",
    "compose-dev:build": "docker compose --profile development build --no-cache",
    "compose-dev:recreate": "docker compose --profile development up --force-recreate --renew-anon-volumes",
    "compose-sb": "docker compose --profile storybook up",
    "compose-sb:build": "docker compose --profile storybook build --no-cache",
    "compose-sb:recreate": "docker compose --profile storybook up --force-recreate --renew-anon-volumes",
    "compose-prod": "docker compose -f compose.prod.yml up",
    "compose-prod:backend": "docker compose -f compose.prod.yml --profile backend up",
    "compose-prod:frontend": "docker compose -f compose.prod.yml --profile frontend up",
    "compose-prod:build": "docker compose -f compose.prod.yml build --no-cache",
    "compose-prod:build:backend": "docker compose -f compose.prod.yml --profile backend build --no-cache",
    "compose-prod:build:frontend": "docker compose -f compose.prod.yml --profile frontend build --no-cache",
    "compose-prod:recreate": "docker compose -f compose.prod.yml up --force-recreate --renew-anon-volumes",
    "compose-prod:recreate:backend": "docker compose -f compose.prod.yml --profile backend up --force-recreate --renew-anon-volumes",
    "compose-prod:recreate:frontend": "docker compose -f compose.prod.yml --profile frontend up --force-recreate --renew-anon-volumes",
    "copy-types": "cd backend && npm run types && cd .. && node scripts/copy-strapi-types.js"
  }
}
